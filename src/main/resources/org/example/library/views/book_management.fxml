<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.library.controllers.BookManagementController" alignment="TOP_LEFT" spacing="10" padding="10">
    <TextField fx:id="idField" promptText="ID"/>
    <TextField fx:id="titleField" promptText="Title"/>
    <TextField fx:id="authorField" promptText="Author"/>
    <TextField fx:id="categoryField" promptText="Category"/>
    <TextField fx:id="stockField" promptText="Stock"/>
    <TextField fx:id="yearField" promptText="Year"/>
    <Button fx:id="addButton" text="Add Book" onAction="#handleAddBook"/>
    <Button fx:id="editButton" text="Edit Book" onAction="#handleEditBook"/>
    <Button fx:id="deleteButton" text="Delete Book" onAction="#handleDeleteBook"/>
    <Button fx:id="displayButton" text="Display Books" onAction="#handleDisplayBooks"/>
</VBox>
